{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    },
    {
        "command": "npm start",
        "name": "Run npm start",
        "request": "launch",
        "type": "node-terminal"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Opera",
      "url": "http://localhost:5173",
      "runtimeExecutable": "/usr/bin/opera",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
